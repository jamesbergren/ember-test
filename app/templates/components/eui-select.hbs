{{eui-button
  label=view.label
  disabled=disabled
  style=style
  size=size
  width='100%'
  classBinding=":eui-select selectClass showPoplist:eui-active"
  trailingIcon="eui-icon eui-icon--select"
  ariaOwns=ariaOwns
  ariaHaspopup=ariaHasPopup}}

{{#if errorMessage}}
  <div class="eui-error-message">
    <div class="eui-error-wrapper">
      <p>
        {{errorMessage}}
      </p>
    </div>
  </div>
{{/if}}

{{#if showPoplist}}
  {{eui-poplist
    isOpen=showPoplist
    selection=_selection
    options=optionsWithBlank
    labelPath=labelPath
    style="flyin"
    modalOnMobile=true
    listWidth=listWidth
    animationStyle=animationStyle}}
{{/if}}
